<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/account_item"
    android:minHeight="@dimen/account_item_minimum_height"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/account_graphic"
        android:layout_width="@dimen/account_item_folder_color_width"
        android:layout_height="@dimen/account_item_swatch_height" />

    <ImageView
        android:id="@+id/account_radio_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/account_item_left_margin"
        android:src="@drawable/account_radio_button" />

    <TextView
        android:id="@+id/unread"
        style="@style/UnreadCount"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/account_item_right_margin"
        android:textColor="@color/account_item_text_color" />

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignWithParentIfMissing="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/account_item_left_margin"
        android:layout_marginRight="@dimen/account_item_right_margin"
        android:layout_toLeftOf="@id/unread"
        android:layout_toRightOf="@id/account_radio_button"
        android:ellipsize="end"
        android:includeFontPadding="false"
        android:singleLine="true"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/account_item_text_color" />

</RelativeLayout>